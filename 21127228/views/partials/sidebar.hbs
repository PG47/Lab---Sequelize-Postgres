<div class="col-lg-4 col-md-5 order-md-1 order-2">
    <div class="blog__sidebar">
        <div class="blog__sidebar__search">
            <form action="#">
                <input id="search_key" name="search_key" type="text" placeholder="Search..." class="form-control input-md">
                <button type="submit" class="btn btn-primary"><span class="icon_search"></span></button>
            </form>
        </div>
        <div class="blog__sidebar__item">
            <h4>Categories</h4>
            <ul>
                <li><a href="/blogs">All</a></li>
                {{#each categories}}
                    <li><a href="/blogs?category={{name}}">{{name}}</a></li>
                {{/each}}
            </ul>
        </div>

        <div class="blog__sidebar__item">
            <h4>Search By Tags</h4>
            <div class="blog__sidebar__item__tags">
                <ul>
                    <li><a href="/blogs">All</a></li>
                    {{#each tags}}
                        <li>
                            <a href="/blogs?tag={{name}}">{{name}}</a>
                        </li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>